{
  "compilerOptions": {
    "target": "ES2020",               // Modern enough JavaScript output
    "module": "CommonJS",             // Use CommonJS modules for Node.js
    "rootDir": "./src",               // Your source folder
    "outDir": "./dist",               // Compiled JS output folder
    "esModuleInterop": true,          // Allows default import syntax for CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,                   // Enable all strict type-checking options
    "skipLibCheck": true              // Skip checking types of dependencies for faster builds
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
